{
  "name": "electron-react-reader",
  "version": "1.0.0",
  "description": "",
  "main": "./app/main/electron.ts",
  "scripts": {
    "start:main": "webpack --config ./webpack/webpack.main.dev.js && electron ./dist/electron.js",
    "start:render": "webpack-dev-server --config ./webpack/webpack.render.dev.js",
    "start": "npm run start:render & npm run start:main"
  },
  "keywords": [],
  "author": "myadmin",
  "license": "ISC",
  "dependencies": {
    "antd": "^4.19.3",
    "electron": "11.1.1",
    "epub": "^1.2.1",
    "react": "^17.0.2",
    "react-dom": "17.0.2",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "7.14.3",
    "@babel/core": "7.14.3",
    "@babel/plugin-transform-modules-commonjs": "7.14.0",
    "@babel/plugin-transform-runtime": "7.14.3",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@types/react": "^17.0.42",
    "@types/react-css-modules": "4.6.2",
    "@types/react-dom": "^17.0.14",
    "@types/react-redux": "^7.1.23",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "9.0.0",
    "babel-loader": "^8.2.4",
    "babel-plugin-react-css-modules": "5.2.6",
    "babel-preset-es2015": "^6.24.1",
    "clean-webpack-plugin": "^4.0.0",
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "3.0.0",
    "eslint": "^7.26.0",
    "eslint-config-alloy": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "4.3.0",
    "less": "3.12.2",
    "less-loader": "6.2.0",
    "postcss-less": "3.1.4",
    "postcss-loader": "3.0.0",
    "prettier": "^2.3.0",
    "style-loader": "2.0.0",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1",
    "webpack": "4.44.1",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "appId": "ElectronReact",
    "productName": "Electron React Reader",
    "copyright": "Copyright @ 2022 ${author}",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "./build/main.js"
    },
    "extends": null,
    "mac": {
      "category": "Application Category",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis"
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}",
      "publisherName": "Zhang"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    }
  }
}
